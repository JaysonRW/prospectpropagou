# Configurações do Flask
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your_secret_key_here_change_in_production

# Configurações do Banco de Dados
# Para SQLite (desenvolvimento)
DATABASE_URL=sqlite:///data/prospeccao.db
# Para PostgreSQL (produção)
# DATABASE_URL=postgresql://username:password@localhost:5432/prospeccao_db

# Configurações do Selenium
SELENIUM_HEADLESS=true
CHROME_DRIVER_PATH=

# Configurações de WhatsApp (opcional)
WHATSAPP_SESSION_PATH=whatsapp_session

# Configurações de Rate Limiting
MAX_MESSAGES_PER_HOUR=10
MAX_SCRAPING_RESULTS=100

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configurações específicas para VPS/Servidor
# Descomente e configure se necessário
# PROXY_URL=
# USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
